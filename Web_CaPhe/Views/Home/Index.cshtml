@model IEnumerable<Web_CaPhe.Models.Product>

<section data-bs-version="5.1" class="header18 cid-tsEQyIZRcx mbr-fullscreen mbr-parallax-background"
         id="header18-1">
    <div class="mbr-overlay"
         style="opacity:0.9; background-size: cover;background-image: url('https://i.imgur.com/7OZohM9.jpg');">
    </div>
    <div class="mbr-overlay" style="opacity: 0.7; background-color: rgb(0, 0, 0);"></div>
    <div class="align-center container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <h1 class="mbr-section-title mbr-fonts-style mbr-white mb-3 display-1">
                    <ong>
                        Every Bite a New Story!

                    </ong>
                </h1>

                <p class="mbr-text mbr-fonts-style mbr-white display-7">
                    Fuel Your Cravings at TPT Food
                </p>
                <div class="mbr-section-btn mt-3">
                    <a class="btn btn-primary display-4" asp-controller="Products" and asp-action="Shop">
                        <span class="mobi-mbri mobi-mbri-shopping-bag mbr-iconfont mbr-iconfont-btn"></span>Oder now&nbsp;
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<section data-bs-version="5.1" class="content2 cid-tsEQSCqggh" id="content2-2">
    <div class="container">
        <div class="mbr-section-head">
            <h4 class="mbr-section-title mbr-fonts-style align-center mb-0 display-2">
                <strong>Top Selling</strong>
            </h4>
            <h5 class="mbr-section-subtitle mbr-fonts-style align-center mb-0 mt-2 display-5">
                Start Your Day Right with Our Crowd-Favorite Treat!
            </h5>
        </div>
        <div class="row mt-4">
            @foreach (var item in Model)
            {
                <div class="item features-image сol-12 col-md-6 col-lg-4">
                    <div class="item-wrapper">
                        <div class="item-img">
                            <img src="@item.ImageUrl" alt="Coffee Shop"
                                 title="">
                        </div>
                        <div class="item-content">

                            <h6 class="item-subtitle mbr-fonts-style mt-1 display-7">
                                <strong>
                                    @item.Name
                                </strong>
                            </h6>
                            <p class="mbr-text mbr-fonts-style mt-3 display-7">@((item.Price.HasValue ? item.Price.Value.ToString("c") : "N/A"))</p>
                        </div>
                        <div class="mbr-section-btn item-footer mt-2">
                            <a href="/ShoppingCart/AddToShoppingCart?pId=@item.Id"
                               class="btn item-btn btn-primary display-4" target="_self">
                                <span class="mbrib-cart-add mbr-iconfont mbr-iconfont-btn"></span>Add to cart
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


